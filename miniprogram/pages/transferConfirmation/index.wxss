page {
  background-color: #F7F8FA;
}
.all {
  width: 95%;
  margin: 0px auto;
}
.all .transferAmount {
  margin-top: 40rpx;
  box-shadow: 0px 5px 12px #ebedf0;
  padding: 25px 15px 25px 20px;
  background-color: white;
  border-radius: 8px;
  display: flex;
}
.all .transferAmount .left {
  flex: 70%;
}
.all .transferAmount .left text {
  font-family: PingFangSC-Semibold;
  font-size: 31rpx;
  color: #363938;
  border-bottom: #369472 1px solid;
  padding: 5px;
}
.all .transferAmount .right {
  text-align: right;
  flex: 30%;
  font-family: PingFangSC-Semibold;
  font-size: 45rpx;
  color: #369472;
}
.all .transferInfo {
  background-color: white;
  margin-top: 40rpx;
  box-shadow: 0px 5px 12px #ebedf0;
  padding: 20px 15px 20px 20px;
  border-radius: 8px;
}
.all .transferInfo .title text {
  font-family: PingFangSC-Semibold;
  font-size: 31rpx;
  color: #363938;
  border-bottom: #369472 1px solid;
  padding: 5px;
}
.all .transferInfo .info {
  margin-top: 30rpx;
}
.all .transferInfo .info text {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #363938;
  line-height: 2em;
}
.all .previewImage {
  background-color: white;
  margin-top: 20px;
  margin-bottom: 100rpx;
  box-shadow: 0px 5px 12px #ebedf0;
  padding: 15px;
  border-radius: 8px;
}
.all .previewImage .title text {
  font-family: PingFangSC-Semibold;
  font-size: 31rpx;
  color: #363938;
  border-bottom: #369472 1px solid;
  padding: 5px;
}
.all .previewImage .preview {
  margin-top: 40rpx;
  text-align: center;
}
.all .previewImage .preview image {
  box-shadow: 0px 5px 12px #ebedf0;
  width: 100%;
}
button.upload {
  box-shadow: 0px 5px 12px #ebedf0;
  text-align: center;
  align-items: center;
  background: #369472;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #FFFFFF;
  width: 90%;
  left: 5%;
  position: fixed;
  bottom: 15px;
  border-radius: 8px;
}
button.cancel {
  background: #D01D1F;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #FFFFFF;
  height: 5.5%;
  width: 42%;
  left: 3%;
  position: fixed;
  bottom: 25rpx;
  border-radius: 8px;
  padding-top: 8rpx;
}
button.confirm {
  text-align: center;
  background: #369472;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #FAFCFC;
  height: 5.5%;
  width: 42%;
  left: 54%;
  position: fixed;
  bottom: 25rpx;
  padding-top: 8rpx;
  border-radius: 15rpx;
}
