page {
  background-color: #F7F8FA;
}
view.index .searchBar {
  background-color: #f0f0f0;
  border-radius: 8px;
  padding: 0px 10px 0px 10px;
}
view.index .searchInput {
  font-size: 12px;
}
view.index .searchCell {
  font-size: 13px;
}
view.index .searchCellGroup {
  margin-top: -5px;
}
view.index view.body view.row {
  width: 93%;
  height: 180px;
  margin: 0px auto;
  margin-top: 15px;
  border-radius: 8px;
  background-repeat: no-repeat;
  background-size: cover;
}
view.index view.body view.row view.price {
  width: 100%;
  height: 47%;
  position: relative;
}
view.index view.body view.row view.price .circle {
  position: relative;
  top: 20rpx;
  left: 560rpx;
  height: 110rpx;
  width: 110rpx;
  text-align: center;
  background: #369472;
  opacity: 0.8;
  border-radius: 50%;
}
view.index view.body view.row view.price .circle image {
  margin-top: 7px;
  width: 45rpx;
  height: 45rpx;
}
view.index view.body view.row view.price .circle view.priceTag {
  margin-top: -1px;
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #FFFFFF;
}
view.index view.body view.row view.information {
  height: 53%;
  background: rgba(9, 9, 9, 0.7);
  box-shadow: 0 -5px 4px 0 rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(1px);
  border-radius: 10px;
  display: flex;
  align-items: center;
  padding: 0px 0px 0px 5px;
}
view.index view.body view.row view.information view.left {
  flex: 22%;
}
view.index view.body view.row view.information view.left image {
  margin-left: 5px;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
view.index view.body view.row view.information view.right {
  flex: 78%;
  color: #FFFFFF;
  text-align: left;
}
view.index view.body view.row view.information view.right view.leaderName {
  font-family: PingFangSC-Thin;
  font-size: 13px;
}
view.index view.body view.row view.information view.right view.storeName {
  margin-top: 5px;
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
}
view.index view.body view.row view.information view.right view.description {
  margin-top: 5px;
  font-family: PingFangSC-Thin;
  font-size: 10px;
  color: #CDCDCD;
}
view.index view.body button::after {
  border: none;
}
