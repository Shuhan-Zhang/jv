.header {
  text-align: center;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
.header .wrapper {
  z-index: 0;
  padding: 30rpx 25rpx 80rpx 25rpx;
  backdrop-filter: blur(2px);
  background: rgba(9, 9, 9, 0.6);
  display: flex;
  align-items: center;
}
.header .left {
  flex: 50%;
}
.header .left .userRow {
  display: flex;
  align-items: center;
}
.header .left .userRow .profile {
  text-align: center;
  flex: 35%;
}
.header .left .userRow .profile image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.header .left .userRow .userInfo {
  flex: 65%;
  text-align: left;
}
.header .left .userRow .userInfo .h2 {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #CDCDCD;
}
.header .left .userRow .userInfo .h1 {
  margin-top: 10rpx;
  font-family: PingFangSC-Semibold;
  font-size: 17px;
  color: #FFFFFF;
}
.header .left .line {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 95%;
  height: 1rpx;
  background-color: #C7C7C7;
}
.header .right {
  flex: 50%;
}
.header .right text {
  font-family: PingFangSC-Semibold;
  font-size: 21px;
  color: #FFFFFF;
  text-align: left;
}
.main {
  position: relative;
  background-color: #F7F8FA;
  border-radius: 23px;
  z-index: 1500;
  margin-top: -23px;
  padding-bottom: 100rpx;
}
.main .infoCell {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.main .imageCell {
  display: block;
}
.main .imageCell image {
  margin-top: 20rpx;
  border-radius: 8px;
  width: 100%;
  height: auto;
}
.main .cellGroup {
  box-shadow: 0px 5px 12px #ebedf0;
}
.main .actionOption {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000;
}
